---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import { getCollection } from 'astro:content';

const allOrganizers = await getCollection('organizers');
const chairs = allOrganizers.filter(o => o.data.role === 'Co-Chair');
const organizers = allOrganizers.filter(o => o.data.role !== 'Co-Chair');

const socialIcons: Record<string, string> = {
	twitter: `<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
	linkedin: `<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
	github: `<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>`,
	website: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>`,
};
---

<Layout>
	<Nav currentPage="/contact" />

	<section class="py-16 px-4 bg-white flex-1">
		<div class="max-w-5xl mx-auto">
			<div class="text-center mb-12">
				<h1 class="text-4xl font-bold mb-4 text-navy">Contact</h1>
				<div class="w-16 h-1 bg-pink mx-auto mb-6"></div>
				<p class="text-gray-500 text-lg max-w-2xl mx-auto">DC State of the Stack is organized by volunteers from the DC-area tech community. Have questions? Reach out!</p>
				<p class="py-8 text-2xl text-pink hover:text-pink-700"><a href="mailto:organizers@dcstateofthestack.org">organizers@dcstateofthestack.org</a></p>
			</div>

			{chairs.length > 0 && (
				<div class="mb-12">
					<h2 class="text-xl font-bold text-navy mb-6 flex items-center gap-3">
						<div class="w-3 h-3 rounded-full bg-teal"></div>
						Co-Chairs
					</h2>
					<div class="grid md:grid-cols-2 gap-6">
						{chairs.map((person) => (
							<div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 flex gap-5">
								<div class="w-16 h-16 bg-teal/10 rounded-full flex-shrink-0 flex items-center justify-center">
									{person.data.photo ? (
										<img src={person.data.photo.src} alt={person.data.name} class="w-16 h-16 rounded-full object-cover" />
									) : (
										<span class="text-teal text-xl font-bold">
											{person.data.name.split(' ').map((n: string) => n[0]).join('')}
										</span>
									)}
								</div>
								<div class="flex-1 min-w-0">
									<h3 class="text-lg font-bold text-navy">{person.data.name}</h3>
									{person.data.company && <p class="text-sm text-teal mb-1">{person.data.company}</p>}
									{person.data.bio && <p class="text-sm text-gray-500 mb-3 leading-relaxed">{person.data.bio}</p>}
									{person.data.socialLinks && person.data.socialLinks.length > 0 && (
										<div class="flex gap-3">
											{person.data.socialLinks.map((link) => (
												<a href={link.url} target="_blank" rel="noopener" class="text-gray-400 hover:text-teal transition-colors" set:html={socialIcons[link.platform]} />
											))}
										</div>
									)}
								</div>
							</div>
						))}
					</div>
				</div>
			)}

			{organizers.length > 0 && (
				<div>
					<h2 class="text-xl font-bold text-navy mb-6 flex items-center gap-3">
						<div class="w-3 h-3 rounded-full bg-pink"></div>
						Organizers
					</h2>
					<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
						{organizers.map((person) => (
							<div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
								<div class="flex items-center gap-3 mb-3">
									<div class="w-10 h-10 bg-pink/10 rounded-full flex-shrink-0 flex items-center justify-center">
										{person.data.photo ? (
											<img src={person.data.photo.src} alt={person.data.name} class="w-10 h-10 rounded-full object-cover" />
										) : (
											<span class="text-pink text-sm font-bold">
												{person.data.name.split(' ').map((n: string) => n[0]).join('')}
											</span>
										)}
									</div>
									<div>
										<h3 class="font-semibold text-navy">{person.data.name}</h3>
										{person.data.company && <p class="text-xs text-gray-400">{person.data.company}</p>}
									</div>
								</div>
								{person.data.bio && <p class="text-sm text-gray-500 mb-3 leading-relaxed">{person.data.bio}</p>}
								{person.data.socialLinks && person.data.socialLinks.length > 0 && (
									<div class="flex gap-3">
										{person.data.socialLinks.map((link) => (
											<a href={link.url} target="_blank" rel="noopener" class="text-gray-400 hover:text-teal transition-colors" set:html={socialIcons[link.platform]} />
										))}
									</div>
								)}
							</div>
						))}
					</div>
				</div>
			)}
		</div>
	</section>

	<Footer />
</Layout>
