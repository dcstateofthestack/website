---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
---

<Layout>
	<Nav currentPage="/sponsors" />

	<section class="py-20 px-4 bg-white flex-1 flex items-center">
		<div class="max-w-4xl mx-auto text-center">
			<h1 class="text-4xl font-bold mb-4 text-navy">Sponsors</h1>
			<div class="w-16 h-1 bg-teal mx-auto mb-8"></div>
			<p class="text-gray-600 text-lg">Coming soon. Interested in sponsoring? <a href="/contact" class="text-teal underline hover:text-pink transition-colors">Get in touch</a>.</p>
		</div>
	</section>

	<Footer />
</Layout>
